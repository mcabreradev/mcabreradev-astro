---
const experiences = [
  {
    role: "Frontend Engineer @Paxer",
    date: "May 2023 - Present",
    description: ["Initiated Growth."],
    technologies: ["React", "Next.js", "JavaScript", "TypeScript", "Storybook"],
  },
  // Add other experiences here
];
---

<div class="mt-12 text-custom-text font-custom-font">
  <h2 class="text-3xl font-bold">Experience</h2>
  {experiences.map((exp, index) => (
    <div class="mt-8 bg-custom-light-gray p-4 rounded-lg">
      <h3 class="text-2xl font-semibold">{exp.role}</h3>
      <p class="italic">{exp.date}</p>
      <ul class="list-disc list-inside">
        {exp.description.map((desc, idx) => (
          <li>{desc}</li>
        ))}
      </ul>
      <div class="mt-2 flex flex-wrap">
        {exp.technologies.map((tech, idx) => (
          <span class="bg-gray-800 text-white px-2 py-1 rounded-full text-sm mr-2 mb-2">
            {tech}
          </span>
        ))}
      </div>
    </div>
  ))}
</div>
